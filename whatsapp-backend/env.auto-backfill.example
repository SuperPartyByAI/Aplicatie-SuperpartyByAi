# Auto-backfill (server-side). Copy into .env or set in systemd/pm2/Docker.
# See RUNBOOK_WHATSAPP_SYNC.md and docs/WHATSAPP_AUTO_BACKFILL.md.

AUTO_BACKFILL_ENABLED=true
AUTO_BACKFILL_INTERVAL_MS=720000
AUTO_BACKFILL_COOLDOWN_SUCCESS_MS=21600000
AUTO_BACKFILL_ATTEMPT_BACKOFF_MS=600000
AUTO_BACKFILL_LEASE_MS=900000
AUTO_BACKFILL_MAX_ACCOUNTS_PER_TICK=3
AUTO_BACKFILL_MAX_CONCURRENCY=1
INSTANCE_ID=hetzner-1

# Recent-sync (gap-filler): lightweight periodic fetch of last N messages from recent threads.
RECENT_SYNC_ENABLED=true
RECENT_SYNC_INTERVAL_MS=120000
RECENT_SYNC_LOOKBACK_MS=21600000
RECENT_SYNC_MAX_THREADS=30
RECENT_SYNC_MAX_MESSAGES_PER_THREAD=20
RECENT_SYNC_MAX_CONCURRENCY=1
RECENT_SYNC_LEASE_MS=300000
