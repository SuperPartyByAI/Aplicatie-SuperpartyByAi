# Firebase/Firestore
# Set via: FIREBASE_SERVICE_ACCOUNT_JSON (base64 encoded JSON) OR
#          FIREBASE_SERVICE_ACCOUNT_PATH (path to JSON file) OR
#          GOOGLE_APPLICATION_CREDENTIALS (path to JSON file)
FIREBASE_SERVICE_ACCOUNT_JSON=
# FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/serviceAccountKey.json
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/serviceAccountKey.json

# Authentication
ADMIN_TOKEN=your-admin-token-here

# WhatsApp Backend URL (Hetzner)
# Default in Flutter: http://37.27.34.179:8080
# For production with HTTPS, use your domain:
# WHATSAPP_BACKEND_URL=https://your-domain.com

# Optional: Third-party APIs (if used)
OPENAI_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Session Storage
# For local development: ./sessions
# For production (Hetzner): /var/lib/whatsapp-backend/sessions
SESSIONS_PATH=./sessions

# Backfill Configuration
WHATSAPP_BACKFILL_THREADS=100
WHATSAPP_BACKFILL_EMPTY_THREADS=50
WHATSAPP_BACKFILL_MESSAGES_PER_THREAD=50
# Set to 'true' to enable aggressive seeding for empty threads during startup
WHATSAPP_BACKFILL_ENABLE_SEEDING=true
