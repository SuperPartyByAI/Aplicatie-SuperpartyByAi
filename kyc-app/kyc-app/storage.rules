rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidImageSize() {
      return request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    function isValidAIImageSize() {
      return request.resource.size < 3 * 1024 * 1024; // 3MB max for AI validation
    }
    
    function isValidImageType() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // KYC documents
    match /kyc/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if isAuthenticated() && 
                     isOwner(userId) && 
                     isValidImageSize() && 
                     isValidImageType();
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Profile pictures
    match /profiles/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                     isOwner(userId) && 
                     isValidImageSize() && 
                     isValidImageType();
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // AI Validations (images for Object Gatekeeper)
    match /ai-validations/{userId}/{allPaths=**} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow write: if isAuthenticated() && 
                     isOwner(userId) && 
                     isValidAIImageSize() && 
                     isValidImageType();
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
