rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function: check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function: check if user is super admin by email
    function isSuperAdminEmail() {
      return request.auth != null && request.auth.token.email == 'ursache.andrei1995@gmail.com';
    }
    
    // Helper function: check if user has staff profile
    function hasStaffProfile() {
      return isAuthenticated() && exists(/databases/$(database)/documents/staffProfiles/$(request.auth.uid));
    }
    
    // Helper function: check if user is employee (authenticated + has staff profile OR super admin)
    function isEmployee() {
      return isSuperAdminEmail() || (isAuthenticated() && hasStaffProfile());
    }
    
    // Helper function: check if user is GM or Admin (based on role in staffProfiles OR super admin)
    function isGmOrAdmin() {
      return isSuperAdminEmail() || 
             (hasStaffProfile() && 
              get(/databases/$(database)/documents/staffProfiles/$(request.auth.uid)).data.role in ['gm', 'admin']);
    }
    
    // Helper function: get staff code
    function getStaffCode() {
      return get(/databases/$(database)/documents/staffProfiles/$(request.auth.uid)).data.code;
    }
    
    // DEPRECATED: Use isGmOrAdmin() instead
    function isAdmin() {
      return isGmOrAdmin();
    }
    
    // Users collection - restricted, prefer staffProfiles for employee data
    match /users/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isGmOrAdmin());
      allow write: if isAuthenticated() && (request.auth.uid == userId || isGmOrAdmin());
    }
    
    // Staff profiles - readable by all employees for display names/roles
    // SECURITY: Prevent privilege escalation - users cannot change their own role
    match /staffProfiles/{profileId} {
      allow read: if isEmployee(); // All employees can read staff profiles
      
      // Create: Only GM/Admin can create staff profiles
      allow create: if isGmOrAdmin();
      
      // Update: Users can update their own profile BUT cannot change role field
      // GM/Admin can update any profile including role
      allow update: if isAuthenticated() && (
        // GM/Admin can update anything
        isGmOrAdmin() ||
        // User can update own profile but role must remain unchanged
        (request.auth.uid == profileId && 
         request.resource.data.role == resource.data.role)
      );
      
      // Delete: Never allow (use isArchived instead)
      allow delete: if false;
    }
    
    // KYC Submissions
    match /kycSubmissions/{submissionId} {
      allow read: if isAuthenticated() && (resource.data.uid == request.auth.uid || isAdmin());
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
      allow update, delete: if isAdmin();
    }
    
    // Events collection (alias for evenimente)
    match /events/{eventId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isEmployee() || (isAuthenticated() && resource.data.createdBy == request.auth.uid);
      allow delete: if false;
    }
    
    // Evenimente - POLITICA: NEVER DELETE
    // All authenticated users can read and create events
    // Only employees or event owner can update/archive
    match /evenimente/{eventId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() 
                    && request.resource.data.createdBy == request.auth.uid
                    && request.resource.data.isArchived == false
                    && request.resource.data.schemaVersion in [2, 3];
      allow update: if isEmployee() || (isAuthenticated() && resource.data.createdBy == request.auth.uid);
      allow delete: if false; // NEVER DELETE - use isArchived instead
      
      // Audit logs subcollection - only server can write, only GM/admin can read
      match /audit/{logId} {
        allow read: if isGmOrAdmin();
        allow write: if false; // Only server (Admin SDK) can write audit logs
      }
      
      // Dovezi subcollection
      match /dovezi/{evidenceId} {
        allow read: if isAuthenticated();
        allow create: if isEmployee(); // Use isEmployee (includes super-admin)
        // Update doar dacă categoria nu e locked (check both new and old schema)
        // Super-admin can always update
        allow update: if isEmployee() && (
          isSuperAdminEmail() ||
          ((!exists(/databases/$(database)/documents/evenimente/$(eventId)/evidenceState/$(resource.data.category)) ||
            !get(/databases/$(database)/documents/evenimente/$(eventId)/evidenceState/$(resource.data.category)).data.locked) &&
           (!exists(/databases/$(database)/documents/evenimente/$(eventId)/dovezi_meta/$(resource.data.categorie)) ||
            !get(/databases/$(database)/documents/evenimente/$(eventId)/dovezi_meta/$(resource.data.categorie)).data.locked))
        );
        allow delete: if false; // NEVER DELETE - use isArchived instead
      }
      
      // Evidence state (new schema)
      match /evidenceState/{categoryId} {
        allow read: if isAuthenticated();
        allow create, update: if isAdmin();
        allow delete: if false; // NEVER DELETE
      }
      
      // Dovezi metadata (old schema - backward compatibility)
      match /dovezi_meta/{categorie} {
        allow read: if isAuthenticated();
        allow create, update: if isAdmin();
        allow delete: if false; // NEVER DELETE
      }
      
      // Alte subcolecții: comentarii, istoric
      match /{subcollection}/{docId} {
        allow read: if isAuthenticated();
        allow create, update: if isAdmin();
        allow delete: if false; // Nimeni nu poate șterge din subcolecții
      }
    }
    
    // AI Conversations
    match /aiConversations/{conversationId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // AI Corrections
    match /aiCorrections/{correctionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Outbox - WhatsApp message queue - POLITICA: NEVER DELETE
    match /outbox/{messageId} {
      // Users can read their own outbox messages
      allow read: if isAuthenticated() && (isAdmin() || resource.data.accountId in getUserAllowedAccounts());
      
      // Users can create outbox messages for allowed accounts
      allow create: if isAuthenticated() && (isAdmin() || request.resource.data.accountId in getUserAllowedAccounts());
      
      // Backend can update status (authenticated service account or admin)
      allow update: if isAuthenticated();
      
      // NEVER DELETE - use status field instead
      allow delete: if false;
    }
    
    // Helper function: get user's allowed account IDs
    function getUserAllowedAccounts() {
      // For now, admin has access to all accounts
      // TODO: Implement allowlist in app_users/{uid}.allowedAccountIds
      return isAdmin() ? ['*'] : [];
    }
    
    // Threads (WhatsApp Conversations) - USED BY BACKEND - POLITICA: NEVER DELETE
    match /threads/{threadId} {
      // Users can read threads for allowed accounts only
      allow read: if isAuthenticated() && (isAdmin() || resource.data.accountId in getUserAllowedAccounts());
      
      // Backend can create and update threads
      allow create, update: if isAuthenticated();
      
      // NEVER DELETE - use isArchived instead
      allow delete: if false;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Users can read messages for allowed accounts only
        allow read: if isAuthenticated() && (isAdmin() || get(/databases/$(database)/documents/threads/$(threadId)).data.accountId in getUserAllowedAccounts());
        
        // Users can create messages for allowed accounts
        allow create: if isAuthenticated() && (isAdmin() || get(/databases/$(database)/documents/threads/$(threadId)).data.accountId in getUserAllowedAccounts());
        
        // Messages cannot be updated (immutable)
        allow update: if false;
        
        // NEVER DELETE - messages are immutable
        allow delete: if false;
      }
    }
    
    // WhatsApp Conversations - NEW (not used yet) - POLITICA: NEVER DELETE
    match /whatsappConversations/{conversationId} {
      allow read: if isAuthenticated() && hasStaffProfile();
      allow create: if isAuthenticated() && hasStaffProfile();
      allow update: if isAuthenticated() && hasStaffProfile();
      allow delete: if false; // Use isArchived instead
    }
    
    // WhatsApp Messages - NEW (not used yet) - POLITICA: NEVER DELETE
    match /whatsappMessages/{messageId} {
      allow read: if isAuthenticated() && hasStaffProfile();
      allow create: if isAuthenticated() && hasStaffProfile();
      allow update: if false; // Messages are immutable
      allow delete: if false; // Never delete messages
    }
    
    // WhatsApp Messages (flat collection) - ACTIVE - POLITICA: NEVER DELETE
    match /whatsapp_messages/{messageId} {
      allow read: if isAuthenticated();
      allow create, update: if true; // Backend needs to write
      allow delete: if false; // Never delete messages
    }
    
    // WhatsApp Threads (flat collection) - ACTIVE - POLITICA: NEVER DELETE
    match /whatsapp_threads/{threadId} {
      allow read: if isAuthenticated();
      allow create, update: if true; // Backend needs to write
      allow delete: if false; // Use isArchived instead
    }
    
    // WhatsApp Accounts - POLITICA: NEVER DELETE
    match /accounts/{accountId} {
      allow read: if isAuthenticated();
      allow create, update: if true; // Backend needs to write
      allow delete: if false; // Use isArchived instead
      
      // Chats subcollection
      match /chats/{chatId} {
        allow read: if isAuthenticated();
        allow create, update: if true;
        allow delete: if false; // Use isArchived instead
        
        // Messages subcollection
        match /messages/{messageId} {
          allow read: if isAuthenticated();
          allow create, update: if true;
          allow delete: if false; // Never delete messages
        }
      }
    }
    
    // App configuration (version, force update, etc.)
    // Must be readable by all authenticated users for update checks
    match /app_config/{document} {
      allow read: if true;  // Public read for update checks
      allow write: if isAdmin();
    }
    
    // Conversation states for interactive event creation
    // Only accessible by the user who owns the session
    match /conversationStates/{sessionId} {
      allow create: if isAuthenticated() && request.resource.data.ownerUid == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.ownerUid == request.auth.uid;
    }
    
    // User event quota for rate limiting
    match /userEventQuota/{userId} {
      allow read: if isAuthenticated() && (request.auth.uid == userId || isAdmin());
      allow write: if false; // Only backend can write
    }
    
    // V3 EN Collections
    
    // AI Global Rules (only super admin can write)
    match /ai_global_rules/{ruleId} {
      allow read: if isEmployee();
      allow write: if request.auth.token.email == 'ursache.andrei1995@gmail.com';
    }
    
    // Staff hours tracking (for salary calculation)
    match /staffHours/{entryId} {
      allow read: if isGmOrAdmin() || 
                     (isAuthenticated() && hasStaffProfile() && 
                      resource.data.staffUid == request.auth.uid);
      allow write: if false; // Only backend
    }
    
    // Tasks (follow-ups, pending actions)
    match /tasks/{taskId} {
      allow read: if isEmployee() && (
        resource.data.assigneeUid == request.auth.uid ||
        resource.data.status == 'OPEN' ||
        isGmOrAdmin()
      );
      allow write: if false; // Only backend
    }
    
    // Notifications (for staff)
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() && (
        resource.data.assigneeUid == request.auth.uid ||
        isGmOrAdmin()
      );
      allow update: if isAuthenticated() && 
                       resource.data.assigneeUid == request.auth.uid &&
                       request.resource.data.status == 'READ';
      allow create, delete: if false; // Only backend
    }
    
    // Counters (for eventShortId generation)
    match /counters/{counterId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend via transactions
    }
    
    // Event history subcollection
    match /evenimente/{eventId}/history/{historyId} {
      allow read: if isEmployee();
      allow write: if false; // Only backend
    }
    
    // Conversations (for AI chat)
    match /conversations/{conversationId} {
      allow read, write: if isAuthenticated() && 
                            resource.data.userId == request.auth.uid;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
