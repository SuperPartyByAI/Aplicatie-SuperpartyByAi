{
  "cSpell.enabled": true,
  "cSpell.language": "en,ro",
  "cSpell.words": [
    "Aplicatie",
    "SuperpartyByAi",
    "Logtail",
    "Sentry",
    "Firestore",
    "Baileys",
    "whatsapp",
    "accountid",
    "qrcode",
    "twilio",
    "openai",
    "elevenlabs",
    "pino",
    "socketio",
    "vite",
    "eslint",
    "prettierrc",
    "gitpod",
    "devcontainer",
    "Railway",
    "Firebase"
  ],
  "cSpell.ignorePaths": [
    "node_modules",
    "dist",
    "build",
    ".git",
    "package-lock.json",
    "*.min.js",
    ".baileys_auth"
  ],

  // ESLint
  "eslint.enable": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  
  // SonarLint
  "sonarlint.rules": {
    "javascript:S1192": {
      "level": "on"
    },
    "javascript:S3776": {
      "level": "on"
    }
  },

  // Prettier
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
