{
  "name": "superparty-whatsapp-functions",
  "version": "5.0.0",
  "description": "SuperParty WhatsApp Backend on Firebase Functions",
  "main": "index.js",
  "engines": {
    "node": "20"
  },
  "scripts": {
    "build": "npx.cmd --yes tsc -p tsconfig.json",
    "serve": "firebase.cmd emulators:start --only functions",
    "shell": "firebase.cmd functions:shell",
    "start": "npm run shell",
    "deploy": "firebase.cmd deploy --only functions",
    "logs": "firebase.cmd functions:log",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@google-cloud/firestore": "^8.0.0",
    "@logtail/node": "^0.5.6",
    "@sentry/node": "^10.32.1",
    "@sentry/profiling-node": "^10.32.1",
    "@whiskeysockets/baileys": "^6.5.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.2",
    "groq-sdk": "^0.37.0",
    "https-proxy-agent": "^7.0.2",
    "ioredis": "^5.8.2",
    "libphonenumber-js": "^1.10.51",
    "pino": "^8.16.2",
    "qrcode": "^1.5.3",
    "socket.io": "^4.6.1",
    "socks-proxy-agent": "^8.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.10",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "typescript": "^5.7.3"
  }
}
