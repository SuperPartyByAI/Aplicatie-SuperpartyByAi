platform :osx, '13.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'ephemeral', 'Flutter-Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure \"flutter pub get\" is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Flutter-Generated.xcconfig, then run \"flutter pub get\""
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_macos_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_macos_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_macos_build_settings(target)
    # Fix deployment target warnings
    target.build_configurations.each do |config|
      if config.build_settings['MACOSX_DEPLOYMENT_TARGET'].to_f < 13.0
        config.build_settings['MACOSX_DEPLOYMENT_TARGET'] = '13.0'
      end
      
      # Remove problematic -G flag if present (not supported on arm64 macOS)
      # Check ALL build settings keys, not just common ones
      config.build_settings.each do |key, value|
        next unless value
        
        if value.is_a?(Array)
          # Remove all occurrences of -G flag from array
          filtered = value.reject { |flag| flag.to_s.strip == '-G' || flag.to_s.strip == '-g' }
          config.build_settings[key] = filtered if filtered != value
        elsif value.is_a?(String)
          # Remove -G flag from string (handle with space or without)
          # Also handle cases like "-G " or " -G" or " -G " or "-Gsomething"
          filtered = value.gsub(/\s*-G\b\s*/, ' ').gsub(/\s*-g\b\s*/, ' ').strip
          # Also remove if it's part of a combined flag like "-O2 -G" or "-G -O2"
          filtered = filtered.gsub(/\s+/, ' ').strip
          config.build_settings[key] = filtered if filtered != value
        end
      end
      
      # Force compiler to treat unsupported flags as warnings instead of errors
      config.build_settings['OTHER_CFLAGS'] ||= ['$(inherited)']
      config.build_settings['OTHER_CPLUSPLUSFLAGS'] ||= ['$(inherited)']
      
      # Remove -G and add -Wno-unused-command-line-argument to suppress warnings
      ['OTHER_CFLAGS', 'OTHER_CPLUSPLUSFLAGS'].each do |flag_key|
        flags = config.build_settings[flag_key]
        if flags.is_a?(String)
          flags = flags.split(' ')
        end
        flags = flags.reject { |f| f == '-G' || f == '-g' }
        flags << '-Wno-unused-command-line-argument' unless flags.include?('-Wno-unused-command-line-argument')
        config.build_settings[flag_key] = flags.join(' ')
      end
    end
  end
  
  # Also remove -G from generated .xcconfig files
  Dir.glob("#{installer.sandbox.root}/Target Support Files/**/*.xcconfig").each do |config_file|
    begin
      content = File.read(config_file)
      original_content = content.dup
      # Remove lines containing -G flag
      content.gsub!(/^[^=]*OTHER_CFLAGS[^=]*=.*-G[^\n]*$/, '')
      content.gsub!(/^[^=]*OTHER_CPLUSPLUSFLAGS[^=]*=.*-G[^\n]*$/, '')
      content.gsub!(/^[^=]*OTHER_LDFLAGS[^=]*=.*-G[^\n]*$/, '')
      # Also remove -G from inline values (more aggressive)
      content.gsub!(/\s+-G\b/, '')
      content.gsub!(/\b-G\s+/, '')
      
      if content != original_content
        File.write(config_file, content)
        puts "Fixed -G flag in #{config_file}"
      end
    rescue => e
      puts "Warning: Could not fix #{config_file}: #{e.message}"
    end
  end
end
