# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Fix deployment target to iOS 14.0
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      
      # Set C++17 standard for gRPC and abseil-related pods (required for C++17 template syntax)
      # This MUST be set BEFORE flutter_additional_ios_build_settings to avoid conflicts
      target_name_lower = target.name.downcase
      if target_name_lower.include?('grpc') || target_name_lower.include?('abseil') || target_name_lower.include?('boring')
        # Try both c++17 and gnu++17 - c++17 is stricter but sometimes works better
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'c++17'
        config.build_settings['GCC_C_LANGUAGE_STANDARD'] = 'gnu11'
        # Also ensure C++17 flags are set explicitly
        existing_flags = config.build_settings['OTHER_CPLUSPLUSFLAGS'] || []
        existing_flags = existing_flags.is_a?(Array) ? existing_flags : [existing_flags] unless existing_flags.is_a?(Array)
        existing_flags = existing_flags.reject { |f| f.to_s.include?('-std=') }
        existing_flags << '-std=c++17'
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = existing_flags
        # Disable the specific warning that's causing the error
        config.build_settings['WARNING_CFLAGS'] ||= []
        warning_flags = config.build_settings['WARNING_CFLAGS']
        warning_flags = warning_flags.is_a?(Array) ? warning_flags : [warning_flags] unless warning_flags.is_a?(Array)
        warning_flags << '-Wno-error=missing-template-arg-list-after-template-kw'
        config.build_settings['WARNING_CFLAGS'] = warning_flags
      end
    end
    
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'x86_64'
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
      
      # Remove unsupported '-G' flags and GCC_WARN_* flags from build settings
      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS OTHER_LDFLAGS COMPILER_FLAGS].each do |key|
        value = config.build_settings[key]
        next unless value
        if value.is_a?(String)
          # Remove -G flag and GCC_WARN_* flags
          flags = value.split.reject do |x|
            x == '-G' || x == '"-G"' || x == "'-G'" ||
            x.start_with?('-GCC_WARN_') || x.start_with?('"-GCC_WARN_') || x.start_with?("'-GCC_WARN_")
          end
          config.build_settings[key] = flags.join(' ')
        elsif value.is_a?(Array)
          config.build_settings[key] = value.reject do |x|
            x.to_s == '-G' || x.to_s == '"-G"' || x.to_s == "'-G'" ||
            x.to_s.start_with?('-GCC_WARN_') || x.to_s.start_with?('"-GCC_WARN_') || x.to_s.start_with?("'-GCC_WARN_")
          end
        end
      end
    end
    
    # Remove unsupported flags from file-level COMPILER_FLAGS
    if target.respond_to?(:source_build_phase) && target.source_build_phase
      target.source_build_phase.files.each do |file|
        next unless file.settings && file.settings['COMPILER_FLAGS']
        flags = file.settings['COMPILER_FLAGS']
        if flags.is_a?(String)
          # Remove -G flag and GCC_WARN_* flags
          filtered_flags = flags.split.reject do |x|
            x == '-G' || x == '"-G"' || x == "'-G'" ||
            x.start_with?('-GCC_WARN_') || x.start_with?('"-GCC_WARN_') || x.start_with?("'-GCC_WARN_")
          end
          file.settings['COMPILER_FLAGS'] = filtered_flags.join(' ')
        end
      end
    end
  end
end
