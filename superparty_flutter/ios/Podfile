# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Fix deployment target to iOS 14.0
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      
      # Apply C++17 globally for all pods (required for gRPC/abseil compatibility)
      config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'gnu++17'
      config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
      
      # Simulator architecture settings
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'x86_64'
      config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
      
      # Fix gRPC/abseil C++ template parsing errors
      if target.name.match?(/^(gRPC-Core|gRPC-C\+\+|abseil|BoringSSL-GRPC)/)
        # Add warning suppression for C++17 template keyword issue
        cflags = config.build_settings['OTHER_CFLAGS'] || []
        cflags = cflags.is_a?(String) ? cflags.split : cflags
        cflags << '-Wno-error=missing-template-arg-list-after-template-kw' unless cflags.include?('-Wno-error=missing-template-arg-list-after-template-kw')
        config.build_settings['OTHER_CFLAGS'] = cflags.join(' ')
        
        cppflags = config.build_settings['OTHER_CPLUSPLUSFLAGS'] || []
        cppflags = cppflags.is_a?(String) ? cppflags.split : cppflags
        cppflags << '-Wno-error=missing-template-arg-list-after-template-kw' unless cppflags.include?('-Wno-error=missing-template-arg-list-after-template-kw')
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] = cppflags.join(' ')
      end
    end
    
    # Call flutter settings AFTER setting our overrides
    flutter_additional_ios_build_settings(target)
    
    # Clean up invalid flags AFTER flutter adds its settings
    target.build_configurations.each do |config|
      # Remove unsupported '-G' flags and -GCC_WARN flags from build settings
      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS OTHER_LDFLAGS COMPILER_FLAGS].each do |key|
        value = config.build_settings[key]
        next unless value
        if value.is_a?(String)
          # Remove standalone -G and flags starting with -GCC_WARN
          flags = value.split.reject do |flag|
            flag == '-G' || flag.start_with?('-GCC_WARN')
          end
          config.build_settings[key] = flags.join(' ')
        elsif value.is_a?(Array)
          config.build_settings[key] = value.reject do |flag|
            flag.to_s == '-G' || flag.to_s.start_with?('-GCC_WARN')
          end
        end
      end
    end
    
    # Also remove -G and -GCC_WARN flags from file-level compiler flags
    if target.respond_to?(:source_build_phase) && target.source_build_phase
      target.source_build_phase.files.each do |file|
        if file.settings && file.settings['COMPILER_FLAGS']
          flags = file.settings['COMPILER_FLAGS']
          if flags.is_a?(String)
            cleaned_flags = flags.split.reject do |flag|
              flag == '-G' || flag.start_with?('-GCC_WARN')
            end
            file.settings['COMPILER_FLAGS'] = cleaned_flags.join(' ')
          elsif flags.is_a?(Array)
            file.settings['COMPILER_FLAGS'] = flags.reject do |flag|
              flag.to_s == '-G' || flag.to_s.start_with?('-GCC_WARN')
            end
          end
        end
      end
    end
  end
  
  # Save the modified Pods project
  installer.pods_project.save
end
