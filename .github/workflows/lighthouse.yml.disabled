name: Lighthouse CI

on:
  push:
    branches: [main]
    paths:
      - 'kyc-app/**'
  pull_request:
    branches: [main]
    paths:
      - 'kyc-app/**'

jobs:
  lighthouse:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: 'npm'
          cache-dependency-path: kyc-app/kyc-app/package-lock.json

      - name: Install dependencies
        run: |
          cd kyc-app/kyc-app
          npm ci

      - name: Build
        run: |
          cd kyc-app/kyc-app
          npm run build

      - name: Run Lighthouse CI
        run: |
          cd kyc-app/kyc-app
          npm run lighthouse
        env:
          LHCI_GITHUB_APP_TOKEN: ${{ secrets.LHCI_GITHUB_APP_TOKEN }}
